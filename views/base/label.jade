extends ../doc-layout

block content
	- defaultGroupName= "Label"
	style.
		.columns.small-6 {
			padding: 2em;
		}
	+addCatalog("standard","Label")
	.example#standard
		h4.ui.header 标签
		.code
			c-label(text="标签" icon="mail")
	+addCatalog("image","图片标签")

	.example#image
		h4.ui.header ImageLabel
		p 可以将图片显示在Label内(图片属性名:<code>image</code>)，此样式下也可以加<code>detail</code>属性来描述信息
		.code
			c-imageLabel(image="/images/avatar/small/helen.jpg" text="媚媚;")
			c-imageLabel(class="blue" image="/images/avatar/small/chris.jpg" text="李四" detail="知己")
			c-imageLabel(class="teal" image="/images/avatar/small/christian.jpg" text="王五" detail="同学")
			c-imageLabel(class="yellow" image="/images/avatar/small/daniel.jpg" text="刘六" detail="同事")
	+addCatalog("corner","角标")
	.example#corner
		h4.ui.header 角标
		p 标签可以位于元素的拐角处
		.ui.ignored.warning.message.
			角落标签必须放置在一个<code>position: relative</code>容器,才可获得正确的现实。如果容器是圆形的请设定<code>overflow:hidden</code>。
		.code
			.row
				.columns.small-6
					div.ui.fluid.image(c-widget="Widget")
						c-corner( icon="heart" class="red" position="left")
						img.ui.image(src="/images/wireframe/image.png")
				.columns.small-6
					div.ui.fluid.image(c-widget="Widget")
						c-corner(c-widget="Corner; icon:save; class:blue")
						img.ui.image(src="/images/wireframe/image.png")
	+addCatalog("tag","小标签")
	.example#tag
		h4.ui.header Tag
		p 标签可以表现为小标签
		.code
			c-tag(text="新闻")
			c-tag(class="red" text="即将到来")
			c-tag(class="teal" text="精选")
	+addCatalog("tag","丝带")
	.example#ribbon(name="ribbon")
		h4.ui.header 丝带
		p 标签可以显示成附着在其他元素上的绶带样式
		.code
			ul.small-block-grid-2.medium-block-grid-4
				li
					.ui.segment.compact
						c-ribbon(class="red" text="概述")
						img(src="/images/wireframe/short-paragraph.png" class="ui image fluid")
				li
					.ui.segment.compact
						c-ribbon(class="blue" text="说明")
						img(src="/images/wireframe/short-paragraph.png" class="ui image fluid")
				li
					.ui.segment.compact
						c-ribbon(class="orange" text="简介" position="right")
						img(src="/images/wireframe/short-paragraph.png" class="ui image fluid")
				li
					.ui.segment.compact
						c-ribbon(class="teal" text="新闻" position="right")
						img(src="/images/wireframe/short-paragraph.png" class="ui image fluid")
	style(name="ribbon").
		.code > ul > li {
			padding: 1em;
		}

		.code > ul > li > .segment > img {
			margin-top: 2em;
		}
	script(type="text/javascript").
		cola(function (model) {

		});
